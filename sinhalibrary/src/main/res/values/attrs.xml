<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="typeface" format="enum">
    </attr>

    <declare-styleable name="CustomTextView">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="CustomAutoTextView">
        <attr name="typeface" />
        <attr name="enoughToFilter" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomCheckbox">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="DropCapsTextView">
        <attr name="dropCapTextSize" format="dimension" />
        <attr name="dropCapTextColor" format="color" />
        <attr name="dropCapPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HmImageView">
        <attr name="defaultImage" format="reference" />
        <attr name="errorImage" format="reference" />
        <attr name="showAnimation" format="boolean" />

        <attr name="fillType" format="enum">
            <enum name="width" value="1" />
            <enum name="height" value="2" />
        </attr>

        <attr name="cropType">
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
        </attr>
    </declare-styleable>

</resources>